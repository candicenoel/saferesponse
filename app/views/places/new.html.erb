<div class="booyah-box col-10 offset-1">
  <h1>Enter Your Resource Place Details</h1>
  <%= simple_form_for @place do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :facility_maps, as: :file %>
    <br />
    <%= f.submit 'Create', class: 'btn btn-primary' %>
  <% end %>
  <% if @place.errors.any? %>
  <ul>
  <% @place.errors.full_messages.each do |msg| %>
    <li class="invalid-feedback"><%= msg %></li>
    <% end %>
  </ul>
  <% end %>
</div>